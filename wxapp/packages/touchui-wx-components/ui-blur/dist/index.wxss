.ui-blur {
  overflow: hidden;
  position: relative;
}
.ui-blur-android {
  position: absolute;
  width: 120%;
  height: 120%;
  filter: blur(45px);
  margin: -10% 0 0 -10%;
  background-repeat: no-repeat;
  background-position: center -100px;
  background-size: 210%;
}
.ui-blur-ios {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  -webkit-backdrop-filter: blur(35px) saturate(200%);
}
.ui-blur-content {
  filter: blur(0);
}
